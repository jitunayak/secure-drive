{
        "name": "secure-drive",
        "version": "1.0.0",
        "description": "Allows to upload files to cloud with secured password protected vault/folder",
        "main": "index.ts",
        "author": "Jitu Nayak",
        "license": "MIT",
        "private": false,
        "scripts": {
                "start": "yarn build && NODE_ENV=prod node build/server.js",
                "dev": "NODE_ENV=dev nodemon src/server.ts",
                "build": "tsc -p tsconfig.json",
                "format": "yarn prettier --write ./src",
                "prepare": "husky install",
                "lint": "eslint . --ext .ts"
        },
        "husky": {
                "hooks": {
                        "pre-commit": "lint-staged"
                }
        },
        "lint-staged": {
                "**/*.ts": [
                        "eslint --fix",
                        "git add"
                ]
        },
        "dependencies": {
                "@aws-sdk/client-cognito-identity": "^3.121.0",
                "@aws-sdk/client-s3": "^3.121.0",
                "@aws-sdk/credential-provider-cognito-identity": "^3.121.0",
                "@aws-sdk/s3-request-presigner": "^3.121.0",
                "dotenv": "^16.0.1",
                "express": "^4.18.1"
        },
        "devDependencies": {
                "@types/express": "^4.17.13",
                "@types/node": "^17.0.42",
                "@typescript-eslint/eslint-plugin": "^5.28.0",
                "@typescript-eslint/parser": "^5.28.0",
                "eslint": "^8.17.0",
                "husky": "^8.0.1",
                "lint-staged": "^13.0.1",
                "prettier": "^2.7.1",
                "pretty-quick": "^3.1.3",
                "ts-node": "^10.8.1",
                "typescript": "^4.7.3",
                "nodemon": "^2.0.19"
        }
}
